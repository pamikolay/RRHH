
@{
    ViewBag.Title = "JobsIndexPrueba";
}
@section styles{
    <link href="~/Content/css/job.css" rel="stylesheet" />
}
<br /><br /><br />
<!-- Busquedas -->
<div>
    <h2>Busquedas Activas</h2>
    <div  id="BusquedasActivas" class="row">
        @if (ViewBag.TablaBusquedas != null)
        {
            foreach (RRHH.Models.Job row in ViewBag.TablaBusquedas)
            {
                <div class="col-md-8 col-md-offset-1">
                    <h3><strong>Puesto:</strong> @row.JobName</h3>
                    <p><strong>Fecha:</strong> @row.JobDate</p>
                    <p><strong>Descripcion del puesto:</strong> @row.JobDescription</p>
                    <p><a class="button-modal btn btn-primary botonPostularse" role="button">Postularse</a></p>
                </div>
            }
        }
    </div>
</div>

<!-- Modal Nuevo Artículo -->
<div class="modal fade" id="modalArticulo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="@Url.Action("GuardarBusqueda","Jobs")" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Nueva busqueda</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="tituloPuesto">Título del Puesto</label>
                        <input type="text" id="tituloBusqueda" name="job_name">
                    </div>
                    <div class="form-group">
                        <label for="descripcionPuesto">Descripcion del puesto</label>
                        <textarea type="text" id="descripcionPuesto" name="job_description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <input id="guardarBusqueda" type="submit" class="btn btn-primary" value="Guardar">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>