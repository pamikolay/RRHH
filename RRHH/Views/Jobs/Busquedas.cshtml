
@{
    ViewBag.Title = "Listado de busquedas";
}
@section styles{
    <link href="~/Content/css/job.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/js/busquedas.js"></script>
}

<br /><br /><br />
<!-- Busquedas -->
<div>
    <h2>Busquedas Activas</h2>
    <div  id="BusquedasActivas" class="row">
        @if (ViewBag.TablaBusquedas != null)
        {
            foreach (RRHH.Models.Job row in ViewBag.TablaBusquedas)
            {
                <div class="col-md-8 col-md-offset-1">
                    <h3 id="tituloBusqueda"><strong>Puesto:</strong> @row.JobName</h3>
                    <p><strong>Fecha:</strong> @row.JobDate</p>
                    <p id="descripcionBusqueda"><strong>Descripcion del puesto:</strong> @row.JobDescription</p>
                    <p>
                        <a class="button-modal btn btn-danger botonEditar" role="button" data-toggle="modal" data-target="#modalEditarBusqueda">Editar</a>
                        <a class="button-modal btn btn-primary botonPostularse" role="button">Postularse</a>
                    </p>
                </div>
            }
        }
    </div>
</div>
<!-- Modal Editar Busqueda -->
<div class="modal fade" id="modalEditarBusqueda" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="@Url.Action("EditarBusqueda","Jobs")" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Editar busqueda</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="tituloBusqueda">Título de la Busqueda</label>
                        <input type="text" id="modalTituloBusqueda" name="job_name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="descripcionPuesto">Descripcion de la Busqueda</label>
                        <textarea type="text" id="modalDescripcionBusqueda" name="job_description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <input id="guardarBusqueda" type="submit" class="btn btn-primary" value="Guardar Cambios">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>