
@{
    ViewBag.Title = "Busquedas Activas";
    Layout = "~/Views/Shared/_Layout_ControlPanel.cshtml";
}

@section styles{
    <link href="~/Content/css/controlPanel.css" rel="stylesheet" />
    <link href="~/Content/css/busquedas.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/js/busquedas.js"></script>
}

<!-- Busquedas Activas -->
<div>
    <h2>Busquedas Activas</h2>
    <div id="BusquedasActivas" class="row">
        @if (ViewBag.BusquedasActivas != null)
        {
            foreach (RRHH.Models.Jobs row in ViewBag.BusquedasActivas)
            {
                <div>
                    <a href="@Url.Action("VerBusqueda", "ControlPanel", new { ID = row.ID })">
                        <div class="job col-md-7 col-md-offset-1">
                            <h3><strong><span class="tituloBusqueda">@row.Name</span></strong></h3>
                            <p class="pDate"><strong>Fecha:</strong> @row.Date.Day/@row.Date.Month/@row.Date.Year</p>
                            <p class="pCompany"><strong>Empresa:</strong> @row.Company.Name</p>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>

