@{
    ViewBag.Title = "Editar Busqueda";
    Layout = "~/Views/Shared/_Layout_ControlPanel.cshtml";
}
@section styles{
    <link href="~/Content/css/editarBusqueda.css" rel="stylesheet" />
}

<!-- EditarBusqueda -->
<div class="row" id="formEditarBusqueda">
    <form action="@Url.Action("EditarBusquedaGuardarCambios","ControlPanel")" method="post">
        <div>
            <h3>Editar busqueda</h3>
        </div>
        <div class="form-group col-md-9 col-md-offset-1">
            <label for="tituloPuesto">Título del Puesto</label>
            <input type="text" class="form-control" value="@ViewBag.JobAmodificar.Name" id="tituloBusqueda" name="job_name">
            <input type="number" class="oculto" value="@ViewBag.JobAmodificar.ID" id="idBusqueda" name="job_id">
        </div>
        <div class="form-group col-md-9 col-md-offset-1">
            <label for="descripcionPuesto">Descripcion del puesto</label>
            <textarea type="text" class="form-control" rows="9" id="descripcionPuesto" name="job_description">@ViewBag.JobAmodificar.Description</textarea>
        </div>
        <div class="form-group col-md-9 col-md-offset-1">
            <label for="empresaPuesto">Empresa</label>
            <select id="companySelect" name="company_id">
                @foreach (RRHH.Models.Companys row in ViewBag.Company)
                {
                    if (ViewBag.JobAmodificar.Company.ID == row.ID)
                    {
                        <option value="@row.ID" selected="selected">@row.Name</option>
                    }
                    else
                    {
                        <option value="@row.ID">@row.Name</option>
                    }
                }
            </select>
        </div>
        <div class="form-group col-md-9 col-md-offset-1">
            <label for="estadoPuesto">Estado de la busqueda</label>
            <select id="jobStatusSelect" name="job_status_id">
                @foreach (RRHH.Models.JobStatuses row in ViewBag.JobStatus)
                {
                    if(ViewBag.JobAmodificar.Status.ID == row.ID)
                    { 
                        <option value="@row.ID" selected="selected">@row.Details</option>
                    }
                    else
                    {
                        <option value="@row.ID">@row.Details</option>
                    }
                }
            </select>
        </div>
        <div class="footer col-md-9 col-md-offset-1">
            <input id="GuardarNuevaBusqueda" type="submit" class="btn btn-primary" value="Guardar">
        </div>
    </form>
</div>

